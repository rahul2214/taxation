rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      return get(/databases/$(database)/documents/customers/$(request.auth.uid)).data.role == 'admin';
    }

    match /customers/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      match /taxDocuments/{documentId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    match /customers/{wildcard=**} {
      allow list: if isAdmin();
    }
    
    match /appointments/{appointmentId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && isAdmin();
    }
    
    match /referrals/{referralId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && isAdmin();
    }
    
    match /siteSettings/taxForms {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin();
    }
  }
}
