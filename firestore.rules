rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Rules for the 'customers' collection
    match /customers/{customerId} {
      allow read, update, delete: if isOwner(customerId) || isAdmin();
      allow create: if isSignedIn(); // Anyone can sign up
    }
    
    match /customers {
      allow list: if isAdmin();
    }
    
    // Rules for the 'taxDocuments' subcollection
    match /customers/{customerId}/taxDocuments/{taxDocumentId} {
      allow read, write, delete: if isOwner(customerId) || isAdmin();
    }

    // Rules for the 'appointments' collection
    match /appointments/{appointmentId} {
      allow read, update, delete: if isAdmin();
      allow create: if true; // Allow anyone to create an appointment
    }
    
    match /appointments {
        allow list: if isAdmin();
    }

    // Rules for the 'referrals' collection
    match /referrals/{referralId} {
      allow read, update, delete: if isAdmin();
      allow create: if true; // Allow anyone to create a referral
    }
    
    match /referrals {
        allow list: if isAdmin();
    }
    
    // Rules for the 'siteSettings' collection
    match /siteSettings/{document=**} {
       allow read: if isSignedIn();
       allow write: if isAdmin();
    }
  }
}
