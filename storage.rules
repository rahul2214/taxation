
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isAdmin(userId) {
      return get(/databases/$(database)/documents/customers/$(userId)).data.role == 'admin';
    }

    // Global Forms: Anyone can read, only admins can write.
    match /global_forms/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && isAdmin(request.auth.uid);
    }

    // Customer Documents: Only the owning user can read/write their own files.
    match /customers/{userId}/{allPaths=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admins can write to the admin_uploads directory for any customer
    match /admin_uploads/{customerId}/{allPaths=**} {
      allow read, write: if request.auth != null && isAdmin(request.auth.uid);
    }
  }
}
