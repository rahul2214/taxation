rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check for admin role via custom claims
    function isAdmin() {
      return request.auth.token.admin == true;
    }
    
    // Rule for global forms:
    // - Allow anyone to read (download)
    // - Only allow admins to write (upload/delete)
    match /global_forms/{allPaths=**} {
      allow read;
      allow write: if isAdmin();
    }

    // Rule for customer-specific documents:
    // - Allow users to read, write, and delete files only within their own user folder
    match /customers/{userId}/{allPaths=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
