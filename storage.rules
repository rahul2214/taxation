
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check for admin custom claim.
    // This is the most secure way for Storage rules.
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Global Forms: Anyone can read, only admins can write.
    match /global_forms/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Customer Documents: Only the owning user can read/write their own files.
    match /customers/{userId}/{allPaths=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access by default.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
