rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Rule for global forms downloadable by any user
    // Admins have write access, any authenticated user has read access.
    match /global_forms/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/(default)/documents/customers/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for customer-specific document uploads
    // Users can only read/write/delete files in their own designated folder.
    match /customers/{userId}/documents/{allPaths=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
