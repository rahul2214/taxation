rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // âœ… Check admin role from Firestore document
    function isAdmin() {
      return request.auth != null &&
        get(/databases/(default)/documents/customers/$(request.auth.uid)).data.role == "admin";
    }

    // ðŸ”¹ Global forms
    // Anyone can read (download)
    // Only admins can write (upload/delete)
    match /global_forms/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // ðŸ”¹ Customer-specific uploads
    // Users can read/write only their own files
    match /customers/{userId}/{allPaths=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
