rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check for admin role via custom claims
    function isAdmin() {
      // Check if the user's auth token has an 'admin' custom claim set to true
      return request.auth != null && request.auth.token.admin == true;
    }

    // Global forms: readable by any authenticated user, writable only by admins.
    match /global_forms/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Customer-specific documents: only accessible by the owner.
    match /customers/{userId}/{allPaths=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
