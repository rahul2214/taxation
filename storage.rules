rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    function isAdmin() {
      return get(/databases/(default)/documents/customers/$(request.auth.uid)).data.role == 'admin';
    }
  
    // Private user files
    match /customers/{userId}/documents/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Global forms, readable by any user, writable only by admin
    match /global_forms/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin();
    }
  }
}
